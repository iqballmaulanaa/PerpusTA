<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_sender_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.joooonho.SelectableRoundedImageView
            android:visibility="gone"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:id="@+id/selectableRoundedImageView"
            app:sriv_right_top_corner_radius="15dp"
            app:sriv_right_bottom_corner_radius="15dp"
            app:sriv_left_top_corner_radius="15dp"
            app:sriv_left_bottom_corner_radius="15dp"
            android:layout_width="250dp"
            android:layout_height="200dp"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:id="@+id/textViewMessage"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/textViewTime"
            android:textColor="@color/timeAgo"
            android:text="5 Jam Lalu"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>