<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/parentRelative"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_toRightOf="@+id/circleImageView"
                android:layout_toLeftOf="@+id/imgMore"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTanggal"
                    android:text="@string/app_name"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtNama"
                    android:text="@string/app_name"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtJumlah"
                    android:text="@string/app_name"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:text="@string/app_name"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- âœ… Tombol Pengembalian untuk Siswa -->
                <Button
                    android:id="@+id/btnKembalikanSiswa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembalikan Buku"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/main_green_color"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgMore"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_more"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</androidx.cardview.widget.CardView>