<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="190dp">

        <com.joooonho.SelectableRoundedImageView
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp"
            app:sriv_left_bottom_corner_radius="10dp"
             app:sriv_right_bottom_corner_radius="10dp"
            android:layout_centerInParent="true"
            android:id="@+id/circleImg"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="160dp"
            android:layout_height="160dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            app:civ_circle_background_color="@android:color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/imgBtn"
            android:scaleType="centerCrop"
            android:tint="@color/purple_500"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNama"
            android:hint="Nama Buku"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_margin="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.perpussapp.perpusapp.Spinner.JRSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategori"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:jrs_title="Kategori"
            app:jrs_multiple="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPenulis"
            android:hint="Penulis"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtTahun"
            android:hint="Terbit Tahun"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>